    <div class="card card-login mx-auto mt-5">
        <div class="card-header bg-teal-gradient text-black" style="color:#2f3742; font-weight:600;">Create A New User</div>
        <div class="card-body">

            @using (Html.BeginForm("AddUser", "Home", FormMethod.Post, new { @class = "form-group", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @*<h4>Create a new account.</h4>
                    <hr />*@
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword)

                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Role)

                        @*@Html.TextBoxFor(m => m.Role, new { @class = "form-control" })*@
                        <select name="Role" class="form-control">
                            <option value="1">Admin</option>
                            <option value="2">Student</option>
                            <option value="3">Teacher</option>
                        </select>

                    </div>

                    <div class="form-group">

                        <input type="submit" class="btn btn-default bg-teal text-black btn-block" value="Register" />

                    </div>
                    <br />

                if (ViewBag.msg == "Account Successfully Created..")
                {
                    <div class="alert alert-success alert-block">

                        <h6 class="alert-heading">@ViewBag.msg</h6>
                    </div>

                }
                
            }

        </div>
    </div>
