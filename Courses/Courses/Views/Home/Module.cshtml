
@{
    ViewBag.Title = "Module";
    Layout = "~/Views/Shared/New_Course_Layout.cshtml";
}

    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <section class="content-header sty-one">
            <h1 class="text-black">
                Module
            </h1>
            <ol class="breadcrumb">
                <li><a href="/Home/Index">Home</a></li>

                <li><i class="fa fa-angle-right"></i> Module</li>
            </ol>
        </section>
        <div class="row">
            <div class="col-12">
                @*<h1 style="color:rgb(53, 53, 53); font-weight:bold;">MODULES</h1>*@
                <form id="myform">

                    <div class="col-lg-3">
                        <fieldset class="form-group">
                            <label>Module Name</label>
                            <input type="text" ng-model="ModuleName" class="form-control" id="basicInput" placeholder="MODULE NAME">
                          
                        </fieldset>
                    </div>


                    @*<div class="form-group col-3">
                        <label>Module Name</label>
                        <input type="text" ng-model="ModuleName"  class="form-control" placeholder="MODULE NAME" >
                        <button type="submit" ng-click="AddModules()" class="btn btn-success">SUBMIT</button>
                    </div>*@
                    <button type="submit" ng-click="AddModules()" class="btn btn-primary">SUBMIT</button>
                </form>
                <br />
                <div class="alert alert-success alert-block" ng-show="isSuccess">

                    <h6 class="alert-heading">{{successMessage}}</h6>
                </div>
                <div class="alert alert-danger alert-block" ng-show="isError">
                    <h6 class="alert-heading">{{errormessage}}</h6>
                </div>



                <!-- Example DataTables Card-->
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fa fa-table "></i><span style="color:#2f3742; font-weight:bold;"> Modules </span> Table
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-sm">
                            <table class="table table-bordered table-striped" cellspacing="0">
                                <thead class="bg-blue-gradient text-black" style="font-weight:normal">
                                    <tr>
                                        <th>MODULE NAME</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="x in getAllModules">


                                        <td>{{x.ModuleName}}</td>
                                   

                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>



