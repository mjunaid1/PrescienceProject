        <div class="row">
            <div class="col-12">
                <h1 style="color:#868e96; font-weight:bold;">COURSES</h1>

                <form id="myform">
                   
                    <div class="form-row">
                        <div class="form-group col-3">
                            <label>Course Name</label>
                            <input type="text" ng-model="CourseName" class="form-control"  placeholder="Course Name" >
                        </div>
                        <div class="form-group col-3">
                            <label>Course Duration</label>
                            <input type="text" ng-model="CourseDuration" class="form-control"  placeholder="Course Duration" >
                        </div>

                        <div class="form-group col-3">
                            <label>Date</label>
                            <div>
                                <input  ng-model="CourseStartDate" class="form-control"  type="date" value="//-//-//" >
                            </div>
                        </div>
                    </div>

                    <button type="submit" ng-click="AddCourses()"  class="btn btn-success">SUBMIT</button>
                </form>
                <br />
                <div class="alert alert-success alert-block" ng-show="isSuccess">
                  
                    <h6 class="alert-heading">{{successMessage}}</h6>
                </div>
                <div class="alert alert-danger alert-block" ng-show="isError">
                    <h6 class="alert-heading">{{errormessage}}</h6>
                </div>


                <!-- Example DataTables Card-->
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fa fa-table "></i><span style="color:#868e96; font-weight:bold;"> Courses </span> Table
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-sm ">
                            <table class="table table-striped table-bordered"  cellspacing="0">
                                <thead class="table-info">
                                    <tr>
                                        <th>COURSE NAME</th>
                                        <th>COURSE DURATION</th>
                                        <th>DATE</th>
                                       
